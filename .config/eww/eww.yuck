(defwindow powermenu
  :monitor 0
  :geometry (geometry :width "100%" :anchor "top center")
  :stacking "bottom"
  :exclusive true
  :class main_box
  (main)
)

(defpoll vtime :interval "5s"
  :initial `date +'{"hour":"%H","min":"%M"}'`
  `date +'{"hour":"%H","min":"%M"}'`)
    
(defwidget wtime [] 
  (label 
  :class "ctime"
  :text "${vtime.hour}:${vtime.min}")
)


(defwidget main []
(box 
:class "cmain_box"
(box 
  (wtime)
)
)
)

