#!/usr/bin/env python3

#####################
# Main
#####################

if __name__ == "__main__":
    pc_name = input('Home PC/Laptop/Android?\n\t')
    if pc_name.strip() == 'Android':
        from android import bootstrap
        bootstrap()
    else:
        match = input("Distro?:\n\t")
        if match == "Arch":
            from arch import bootstrap
            step = input("Step? (default=all):\n\t")
            if step.strip() == '':
                bootstrap(pc_name)
            else:
                exec(f"{step.strip()}()")
        else:
            print("Aborted")
