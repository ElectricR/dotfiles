#!/usr/bin/env python3

#####################
# Main
#####################

if __name__ == "__main__":
    pc_name = input('Home PC/Laptop/Android?\n\t')
    if pc_name.strip() == 'Android':
        from android import bootstrap
        bootstrap()
    else:
        match = input("Distro?:\n\t")
        if match == "Arch":
            from arch import bootstrap
            bootstrap(pc_name)
        else:
            print("Aborted")
